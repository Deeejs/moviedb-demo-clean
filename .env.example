# Development Environment Configuration
# Copy this file to .env and update values as needed

# ======================
# DEVELOPMENT DEPLOYMENT  
# ======================

# Domain Configuration (for development)
DOMAIN_NAME=localhost
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# ======================
# DATABASE CONFIGURATION
# ======================

# PostgreSQL Database (development)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=moviedb
DATABASE_URL=postgresql://postgres:postgres@db:5432/moviedb?schema=public

# ======================
# BACKEND CONFIGURATION
# ======================

# JWT Authentication (change in production!)
JWT_SECRET=movie-demo-secret-key
JWT_EXPIRES_IN=1d

# API Security (change in production!)
API_SECRET=movie-api-secret-2024

# Server Configuration
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# ======================
# DOCKER COMPOSE OVERRIDES
# ======================

# Container restart policy
RESTART_POLICY=unless-stopped

# Container memory limits (lighter for dev)
BACKEND_MEMORY_LIMIT=256m
FRONTEND_MEMORY_LIMIT=128m
DB_MEMORY_LIMIT=512m